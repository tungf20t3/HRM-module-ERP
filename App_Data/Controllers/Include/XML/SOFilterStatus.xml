<field name="status" clientDefault="*">
  <header v="Trạng thái" e="Status"></header>
  <items style="DropDownList">
    <item value="*">
      <text v="Tất cả" e="All"/>
    </item>
    <item value="0">
      <text v="Lập chứng từ" e="No Action"/>
    </item>
    <item value="1">
      <text v="Chờ duyệt" e="Open"/>
    </item>
    <item value="2">
      <text v="Duyệt" e="Approve"/>
    </item>
    <item value="3">
      <text v="Treo" e="Hold"/>
    </item>
    <item value="4">
      <text v="Đang xuất" e="Issuing"/>
    </item>
    <item value="5">
      <text v="Hoàn thành" e="Completed"/>
    </item>
    <item value="6">
      <text v="Đóng" e="Closed"/>
    </item>
    <item value="9">
      <text v="Đang duyệt" e="Pending"/>
    </item>
  </items>
  <clientScript>&OnSelectionOutline;</clientScript>
</field>