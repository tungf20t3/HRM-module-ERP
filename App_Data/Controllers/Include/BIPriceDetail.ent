<!ENTITY PriceDetailGroupExecuteCommand "
    case 'PriceDetailGroup':
      var r = g._activeRow;
      if (!r || r &lt; 0) return;
      switch (e.type.Value) {
        case '10':
          &PriceDetailScaleExecuteShow;
          break;
        case '30':
          &PriceDetailConditionTypeExecuteShow;
          break;
        default:
          break;
      }
      break;
">
