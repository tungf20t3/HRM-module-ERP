    </field>
    <field name="h_loi" type="String">
      <header v="Lỗi" e="Defect"/>
    </field>
    <field name="h_ghi_chu_kq" type="String">
      <header v="Ghi chú kết quả" e="Note"/>
    </field>
    <field name="h_dot" type="String">
      <header v="................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................" e="................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................"/>
    </field>
  </fields>
</report>