        </field>
        <field name="h_bi_so_ct" type="String">
          <header v="Số phiếu" e="Voucher No."/>
        </field>
      </fields>
    </form>
  </forms>

  <fields>
    <field name="title" type="String">
      <header v="PHIẾU NHẬP KHO" e="STOCK TRANSFER IN"/>
    </field>
