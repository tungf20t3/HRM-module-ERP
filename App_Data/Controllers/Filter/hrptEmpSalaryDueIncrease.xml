  <views>
    <view id="Dir" height="&TabHeightFomula;">
      <item value="120, 30, 70, 100, 100, 130, 0, 0, 0"/>
      <item value="110------: [date_from].Label, [date_from]"/>
      <item value="110------: [date_to].Label, [date_to]"/>
      <item value="110100000: [ma_bp].Label, [ma_bp], [ten_bp%l]"/>
      <item value="11011-111: [nh_bp1].Description, [nh_bp1], [nh_bp2], [nh_bp3], [ten_nh_bp1%l], [ten_nh_bp2%l], [ten_nh_bp3%l]"/>
      <item value="11011-111: [nh_nv1].Description, [nh_nv1], [nh_nv2], [nh_nv3], [ten_nh_nv1%l], [ten_nh_nv2%l], [ten_nh_nv3%l]"/>

      <item value="110100000: [ma_vtr].Label, [ma_vtr], [ten_vtr%l]"/>
      <item value="11011-111: [nh_vtr1].Description, [nh_vtr1], [nh_vtr2], [nh_vtr3], [ten_nh_vtr1%l], [ten_nh_vtr2%l], [ten_nh_vtr3%l]"/>

      <item value="110100000: [bac_ql].Label, [bac_ql], [ten_bac_ql%l]"/>
      <item value="110100000: [ma_nt].Label, [ma_nt], [ten_nt%l]"/>
      <item value="11000----: [tt_nv].Label, [tt_nv]"/>
      <item value="11000----: [mau_bc].Label, [mau_bc]"/>
      &ReportSign.Filter.Views;
      &ReportMarginView;
      <categories>
        <category index="1" columns="120, 30, 70, 100, 100, 130">
          <header v="Thông tin chung" e="General"/>
        </category>
        &ReportSign.Filter.Categories;
      </categories>
    </view>
  </views>

  <commands>
    <command event="Initialize">
      <text>
        <![CDATA[
declare @message nvarchar(4000)
select @message = 'init$VoucherFilter$(this);'
]]>&ReportSign.Filter.Initialize;<![CDATA[
select @message as message
return
]]>
      </text>
    </command>

    <command event="Loading">
      <text>
        <![CDATA[
declare @baseCurrency varchar(32), @baseCurrencyName nvarchar(128)
select @baseCurrency = isnull(rtrim(val), '') from options where name = 'm_ma_nt0'
select @baseCurrencyName = case when @@language = 'V' then ten_nt else ten_nt2 end from dmnt where ma_nt = @baseCurrency
select 'this._baseCurrency = ''' + @baseCurrency + ''';this._baseCurrencyName = ''' + replace(replace(@baseCurrencyName, '\', '\\'), '''', '\''') + ''';active$VoucherFilter$(this);' as message
return
]]>
      </text>
    </command>
    &XMLWhenFilterClosing;
    <command event="Processing">
      <text>
        <![CDATA[
select cast(@date_from as smalldatetime) as date_from, cast(@date_to as smalldatetime) as date_to
exec hs_rptEmpSalaryDueIncrease @date_from, @date_to, @ma_bp, @nh_bp1, @nh_bp2, @nh_bp3, @nh_nv1, @nh_nv2, @nh_nv3, @ma_vtr, @nh_vtr1, @nh_vtr2, @nh_vtr3, @bac_ql, @ma_nt, @tt_nv, @@language, @@userID, @@admin, '@@sysDatabaseName'
]]>
        &ReportMarginProcessing;
        &ReportSign.Filter.Query;
      </text>
    </command>
  </commands>

  <script>
    <text>
      &OutlineEntry;
      &ScriptFilterInit;
      <![CDATA[
function active$VoucherFilter$(f) {
  f.add_onResponseComplete(on$Filter$ResponseComplete);
  if (!f.getItemValue('ma_nt')) {
    f.setItemValue('ma_nt', f._baseCurrency);
    f.getItem('ten_nt%l').value = f._baseCurrencyName;
  }
  changeLookupReadonly(f, 'tt_nv', true);
  ]]>&ReportSign.Filter.Active;<![CDATA[
}
function close$VoucherFilter$(a){try{a.remove_onResponseComplete(on$Filter$ResponseComplete)}catch(b){}}function on$Filter$ResponseComplete(h,a){var b=a.object,c=a.type.Context,g=a.type.Result;switch(c){case"Checking":var f=b.grid,d=b.getItem("date_from").value,e=b.getItem("date_to").value;f._alterTitle=[null,[["%d1",d,true],["%d2",e,true]]]}}]]>
    </text>
  </script>

  &OutlineCss;
</dir>