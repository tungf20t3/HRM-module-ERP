      <header v="" e=""></header>
    </field>
    <field name="vtr_ut" onDemand="true" categoryIndex="1">
      <header v="Vị trí" e="Vacancy"></header>
      <items style="AutoComplete" controller="hrPosition" reference="ten_vtr_ut%l" key="status = '1'" check="1 = 1"/>
