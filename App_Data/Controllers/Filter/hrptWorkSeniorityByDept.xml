  <commands>
    <command event="Initialize">
      <text>
        <![CDATA[
declare @message nvarchar(4000)
select @message = 'init$VoucherFilter$(this);'
]]>&ReportSign.Filter.Initialize;<![CDATA[
select @message as message
return
]]>
      </text>
    </command>

    &XMLWhenFilterLoading;
    &XMLWhenFilterClosing;

    <command event="Processing">
      <text>
        <![CDATA[
declare @h_loai_ky nvarchar(33), @h_tu nvarchar(33), @h_den nvarchar(33), @h_thu_viec nvarchar(33), @h_total nvarchar(33)
select @h_tu = case when @@language = 'V' then N'Từ ' else 'From' end, @h_den = case when @@language = 'V' then N'đến' else 'to' end
select @h_thu_viec = case when @@language = 'V' then N'Thử việc' else 'Probationary' end, @h_total = case when @@language = 'V' then N'Tổng cộng' else 'Total' end
if @loai_tn = '1' select @h_loai_ky = case when @@language = 'V' then N' năm' else N' Year' end
  else select @h_loai_ky = case when @@language = 'V' then N' tháng' else N' Month' end

select @h_thu_viec as h_cot0, '< ' + rtrim(@nam) + @h_loai_ky as h_cot1,
  (rtrim(@h_tu) + ' ' + rtrim(@nam) + ' ' + @h_den + ' ' + rtrim(@nam + @khoang_cach)) as h_cot2,
  (rtrim(@h_tu) + ' ' + rtrim(@nam + @khoang_cach) + ' ' + @h_den + ' ' + rtrim(@nam + @khoang_cach *2)) as h_cot3,
  ('>= ' + rtrim(@nam + @khoang_cach * 2) + @h_loai_ky + case when @@language = 'V' then '' else 's' end) as h_cot4,
  @h_total as h_cot5, @ngay_bc as ngay_bc

exec hs_rptWorkSeniorityByDept @ngay_bc, @ngay_tu, @ngay_den, @loai_tn, @nam, @khoang_cach, 4, @ma_bp, @nh_bp1, @nh_bp2, @nh_bp3, @nh_nv1, @nh_nv2, @nh_nv3, @ma_loai, @ma_pn, @bac_bp, @ma_vtr, @nh_vtr1, @nh_vtr2, @nh_vtr3, @ma_bac, @@language, @@userID, @@admin, '@@sysDatabaseName'
]]>
        &ReportMarginProcessing;
        &ReportSign.Filter.Query;
      </text>
    </command>
  </commands>

  <script>
    <text>
      &OutlineEntry;
      &ScriptFilterInit;
      <![CDATA[
function active$VoucherFilter$(f) {
  f.add_onResponseComplete(on$Filter$ResponseComplete);
  if (!f.getItemValue('ngay_bc')) f.setItemValue('ngay_bc', new Date());
  f.live(f.getItem('ngay_bc'));
  f.setReferenceKeyFilter('ma_pn');
  ]]>&ReportSign.Filter.Active;<![CDATA[
}
function close$VoucherFilter$(a){try{a.remove_onResponseComplete(on$Filter$ResponseComplete)}catch(b){}}function on$Filter$ResponseComplete(g,c){var b=c.object,d=c.type.Context,f=c.type.Result;switch(d){case"Checking":var a=b.grid,e=b.getItem("ngay_bc").value;a._alterTitle=[null,[["%d",e,true]]];a._typeSeniority=b.getItemValue("loai_tn"),a._time=b.getItemValue("nam"),a._gap=b.getItemValue("khoang_cach");if(a._fields.length>0)try{init$GridReport$(a)}catch(h){}}}function onChange$Filter$CategoryType(a){a.parentForm.setReferenceKeyFilter("ma_pn")}]]>
    </text>
  </script>

  &OutlineCss;
