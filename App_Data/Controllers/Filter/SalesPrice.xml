    </text>
  </script>

  <response>
    <action id="SalesPriceType">
      <text>
        <![CDATA[
if exists(select 1 from dmloaigia2 where loai_gia = @loai_gia) begin
  select rtrim(xtype) as xtype from dmloaigia2 where loai_gia = @loai_gia
  return
end
]]>
      </text>
    </action>

  </response>
</dir>