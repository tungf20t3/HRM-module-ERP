}
function close$VoucherFilter$(sender) {try {sender.remove_onResponseComplete(on$Filter$ResponseComplete);} catch (ex) {}}
function on$Filter$ResponseComplete(sender, e) {
  var f = e.object, context = e.type.Context, result = e.type.Result;
  switch (context) {
    case 'Checking':
      var g = f.grid, id = f.get_id(), v = f._language == 'v', ms = f.getItem('ngay_bc1').field.Label;
      var e1 = (v ? 'Trường <span class="Highlight">' + ms + '</span> chưa nhập hoặc giá trị nhập không hợp lệ.' : 'Field <span class="Highlight">' + ms + '</span> must not be blank or has invalid value.');
      var diffDate = dateDiffInDays(f.getItemValue('ngay_bc1', null, null, true), f.getItemValue('ngay_bc2', null, null, true));
      if (diffDate < 0 || diffDate >= 40) {
        $func.hideWait(id);
        $message.show(e1, String.format('$find(\'{0}\').getItem(\'ngay_bc2\').focus()', id));
        f._checked = false;
        break;
      }
      g._alterTitle = [null, [['%d1', f.getItem('ngay_bc1').value, true], ['%d2', f.getItem('ngay_bc2').value, true], ['%s1', f.getItemValue('gio1'), true], ['%s2', f.getItemValue('gio2'), true]]];
      if (g._$k != null) {
        g._$k = [];
        g._$v = [];
      }
      break;
    default:
      break;
  }
}
function dateDiffInDays(d1, d2) {
  var u1 = Date.UTC(d1.getFullYear(), d1.getMonth(), d1.getDate()), u2 = Date.UTC(d2.getFullYear(), d2.getMonth(), d2.getDate());
  return Math.floor((u2 - u1) / 86400000);
}
